{
  "version": 2,
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/page-data/(.*)",
      "dest": "/page-data/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    {
      "src": "/app-data.json",
      "dest": "/app-data.json",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    },
    {
      "src": "/(.*\\.(js|json|css|ico|png)$)",
      "dest": "/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" }
    }
  ],
  "builds": [
    { "use": "@now/static-build", "src": "package.json", "config": { "distDir": "public" } }
  ]
}
